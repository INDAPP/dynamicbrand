<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.fdc.dynamicbrand.MainActivity"
    android:background="@drawable/background">


    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Info"
            android:textColor="@android:color/white"
            android:id="@+id/btnContacts"
            android:layout_gravity="right|center_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Crediti"
            android:textColor="@android:color/white"
            android:id="@+id/btnLicence"
            android:layout_gravity="left|center_vertical" />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linearLayout"
        android:gravity="center"
        android:layout_marginBottom="60dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Genera Logo"
            android:id="@+id/btnGeneration"
            android:background="@drawable/button_type_fill"
            android:textColor="@color/abc_secondary_text_material_dark"
            android:textSize="15sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Brand Esistenti"
            android:id="@+id/btnBrands"
            android:background="@drawable/button_type_fill"
            android:textColor="@color/abc_secondary_text_material_dark"
            android:textSize="15sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_below="@+id/btnGeneration"
            android:layout_alignLeft="@+id/btnGeneration"
            android:layout_alignStart="@+id/btnGeneration"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Guida"
            android:id="@+id/btnGuide"
            android:background="@drawable/button_type_stroke"
            android:textColor="#dec0c5"
            android:textSize="15sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_below="@+id/btnBrands"
            android:layout_alignLeft="@+id/btnBrands"
            android:layout_alignStart="@+id/btnBrands"
            android:layout_margin="5dp" />
    </LinearLayout>

</RelativeLayout>